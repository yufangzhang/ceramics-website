---
import { sanityClient, urlFor, type Profile } from '../lib/sanityClient';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Handcrafted pottery with soul" } = Astro.props;
const currentPath = Astro.url.pathname;
const baseUrl = import.meta.env.BASE_URL;

// Helper to create proper links for both dev and production
const link = (path: string) => {
  if (baseUrl === '/') return path;
  return `${baseUrl}${path}`;
};

// Fetch profile for logo
const profile = await sanityClient.fetch<Profile>(
  "*[_type == 'profile' && _id == 'profile'][0] { _id, logo }"
);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;1,300;1,400;1,600&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script>
      import '../lib/sentry';
    </script>
    <style is:global>
      /* Typography */
      h1, h2, h3, h4, .font-serif {
        font-family: "Cormorant Garamond", serif;
        font-style: italic;
      }

      nav a, .metadata, .uppercase {
        font-family: "Inter", sans-serif;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-size: 0.7rem;
      }

      /* Subtle image fade-in */
      img {
        opacity: 1;
        transition: opacity 0.6s ease-in-out;
      }
    </style>
  </head>
  <body class="min-h-screen bg-warm-white text-stone-grey font-sans antialiased">
    <!-- Horizontal minimalist navigation -->
    <nav class="w-full py-8 px-8 bg-warm-white sticky top-0 z-50 border-b border-zinc-100">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <!-- Brand name/logo on left -->
        <a href={link('/')} class="group flex items-start gap-3">
          <div class="flex flex-col">
            <h1 class="text-3xl font-serif italic text-zinc-900 tracking-tight transition-colors group-hover:text-zinc-500">
              Yufang Zhang
            </h1>
            <p class="text-[9px] uppercase tracking-[0.4em] text-zinc-400 mt-1">
              Ceramic Artist
            </p>
          </div>
          {profile?.logo?.asset && (
            <img
              src={urlFor(profile.logo).width(200).format('webp').quality(90).url()}
              alt="Logo"
              class="h-9 w-auto"
            />
          )}
        </a>

        <!-- Navigation links on right -->
        <div class="flex items-center gap-x-8">
          <a
            href={link('/')}
            class:list={[
              "text-[11px] uppercase tracking-[0.25em] transition-all duration-500 ease-out hover:tracking-[0.35em]",
              (currentPath === baseUrl || currentPath === `${baseUrl}/`) ? "text-zinc-900 border-b border-zinc-900" : "text-zinc-500 hover:text-zinc-900"
            ]}
          >
            Home
          </a>
          <a
            href={link('/gallery/')}
            class:list={[
              "text-[11px] uppercase tracking-[0.25em] transition-all duration-500 ease-out hover:tracking-[0.35em]",
              currentPath.includes("/gallery") ? "text-zinc-900 border-b border-zinc-900" : "text-zinc-500 hover:text-zinc-900"
            ]}
          >
            Gallery
          </a>
          <a
            href={link('/events/')}
            class:list={[
              "text-[11px] uppercase tracking-[0.25em] transition-all duration-500 ease-out hover:tracking-[0.35em]",
              currentPath.includes("/events") ? "text-zinc-900 border-b border-zinc-900" : "text-zinc-500 hover:text-zinc-900"
            ]}
          >
            Events
          </a>
          <a
            href={link('/about/')}
            class:list={[
              "text-[11px] uppercase tracking-[0.25em] transition-all duration-500 ease-out hover:tracking-[0.35em]",
              currentPath.includes("/about") ? "text-zinc-900 border-b border-zinc-900" : "text-zinc-500 hover:text-zinc-900"
            ]}
          >
            About
          </a>
          <a
            href={link('/contact/')}
            class:list={[
              "text-[11px] uppercase tracking-[0.25em] transition-all duration-500 ease-out hover:tracking-[0.35em]",
              currentPath.includes("/contact") ? "text-zinc-900 border-b border-zinc-900" : "text-zinc-500 hover:text-zinc-900"
            ]}
          >
            Contact
          </a>
        </div>
      </div>
    </nav>

    <main class="container mx-auto px-6 lg:px-12 py-24">
      <slot />
    </main>

    <footer class="mt-32 py-16">
      <div class="container mx-auto px-6 lg:px-12 text-center text-clay-muted text-xs tracking-widest uppercase">
        <p>&copy; {new Date().getFullYear()} Yufang Zhang Ceramics. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

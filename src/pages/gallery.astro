---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { sanityClient, type Work } from '../lib/sanityClient';

const works = await sanityClient.fetch<Work[]>(
  `*[_type == "work"] | order(order asc, year desc) {
    _id,
    title,
    slug,
    year,
    dimensions,
    category,
    images,
    description,
    featured,
    order
  }`
);
---

<BaseLayout title="Gallery - Yufang Zhang Ceramics" description="Explore my pottery collection">
  <!-- Gallery Grid -->
  <section class="py-12">
    {works.length === 0 ? (
      <div class="text-center py-32">
        <p class="text-clay-muted text-lg tracking-wide font-light">
          No works yet. Add some in the Sanity Studio!
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-24">
        {works.map((work) => (
          <ProjectCard work={work} />
        ))}
      </div>
    )}
  </section>
</BaseLayout>

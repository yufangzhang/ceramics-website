---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { sanityClient, type Work } from '../lib/sanityClient';

const works = await sanityClient.fetch<Work[]>(
  `*[_type == "work"] | order(order asc, year desc) {
    _id,
    title,
    slug,
    year,
    dimensions,
    category,
    images,
    description,
    featured,
    order,
    homeOrder
  }`
);
---

<BaseLayout title="Gallery - Yufang Zhang Ceramics" description="Explore my pottery collection">
  <!-- Brief intro -->
  <section class="text-center py-12 max-w-4xl mx-auto">
    <p class="text-base md:text-lg text-clay-muted leading-relaxed tracking-wide font-light">
      Porcelain & Stoneware.
    </p>
  </section>

  <!-- Gallery Grid -->
  <section class="py-12">
    {works.length === 0 ? (
      <div class="text-center py-32">
        <p class="text-clay-muted text-lg tracking-wide font-light">
          No works yet. Add some in the Sanity Studio!
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-20 gap-y-32">
        {works.map((work, index) => (
          <div class={index % 2 !== 0 ? "md:mt-40" : ""}>
            <ProjectCard work={work} />
          </div>
        ))}
      </div>
    )}
  </section>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { sanityClient, type Work } from '../lib/sanityClient';

const works = await sanityClient.fetch<Work[]>(
  `*[_type == "work"] | order(order asc, year desc) {
    _id,
    title,
    slug,
    year,
    dimensions,
    category,
    images,
    description,
    featured,
    order
  }`
);
---

<BaseLayout title="Gallery - Yufang Zhang Ceramics" description="Explore my pottery collection">
  <!-- Page Header -->
  <section class="text-center py-12 md:py-16 border-b border-zinc-200">
    <h1 class="text-4xl md:text-5xl font-light text-zinc-900 tracking-wide">
      Gallery
    </h1>
    <p class="text-lg text-zinc-600 mt-4 tracking-wide">
      A collection of handcrafted pottery pieces
    </p>
  </section>

  <!-- Gallery Grid -->
  <section class="py-12 md:py-20">
    {works.length === 0 ? (
      <div class="text-center py-20">
        <p class="text-zinc-500 text-lg tracking-wide">
          No works yet. Add some in the Sanity Studio!
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
        {works.map((work) => (
          <ProjectCard work={work} />
        ))}
      </div>
    )}
  </section>
</BaseLayout>

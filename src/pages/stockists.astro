---
import BaseLayout from '../layouts/BaseLayout.astro';
import { sanityClient, type Stockist } from '../lib/sanityClient';

const stockists = await sanityClient.fetch<Stockist[]>(
  `*[_type == "stockist"] | order(order asc) {
    _id,
    name,
    location,
    address,
    website,
    description,
    order
  }`
);
---

<BaseLayout title="Stockists - Yufang Zhang Ceramics">
  <div class="max-w-4xl mx-auto">
    <!-- Page Header -->
    <section class="text-center py-12 md:py-16 border-b border-zinc-200">
      <h1 class="text-4xl md:text-5xl font-light text-zinc-900 mb-6 tracking-wide">
        Stockists
      </h1>
      <p class="text-lg text-zinc-600 leading-relaxed tracking-wide">
        Find my work at these carefully selected shops and galleries.
      </p>
    </section>

    <!-- Stockists List -->
    <section class="py-12 md:py-16">
      {stockists.length === 0 ? (
        <div class="text-center py-20">
          <p class="text-zinc-500 text-lg tracking-wide">
            No stockists listed yet. Check back soon!
          </p>
        </div>
      ) : (
        <div class="space-y-12">
          {stockists.map((stockist) => (
            <article class="border-b border-zinc-200 pb-12 last:border-b-0">
              <div class="space-y-4">
                <div>
                  <h2 class="text-2xl font-light text-zinc-900 mb-2 tracking-wide">
                    {stockist.name}
                  </h2>
                  <p class="text-lg text-zinc-600 tracking-wide">
                    {stockist.location}
                  </p>
                </div>

                {stockist.address && (
                  <p class="text-zinc-600 whitespace-pre-line">
                    {stockist.address}
                  </p>
                )}

                {stockist.description && (
                  <p class="text-zinc-600 leading-relaxed">
                    {stockist.description}
                  </p>
                )}

                {stockist.website && (
                  <a
                    href={stockist.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-zinc-900 hover:text-zinc-600 transition-colors duration-200 tracking-wide"
                  >
                    Visit Website
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      )}
    </section>
  </div>
</BaseLayout>

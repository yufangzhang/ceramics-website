---
import BaseLayout from '../layouts/BaseLayout.astro';
import { sanityClient, type Profile } from '../lib/sanityClient';

const profile = await sanityClient.fetch<Profile>(
  `*[_type == "profile" && _id == "profile"][0] {
    _id,
    email,
    instagramHandle,
    location
  }`
);
---

<BaseLayout title="Contact - Yufang Zhang Ceramics" description="Get in touch">
  <div class="max-w-3xl mx-auto">
    {profile ? (
      <div class="py-12">
        <!-- Commission Note at top -->
        <div class="mb-16">
          <h3 class="metadata text-clay-muted mb-4">
            Commission & Sale Inquiry
          </h3>
          <p class="text-base md:text-lg text-clay-muted leading-relaxed tracking-wide font-light">
            I welcome commission inquiries for custom pottery pieces. Please get in touch via email with details about what you're looking for, and I'll be happy to discuss possibilities.
          </p>
        </div>

        <!-- Contact Information -->
        <div class="space-y-16">
          {profile.email && (
            <div>
              <h3 class="metadata text-clay-muted mb-4">
                Email
              </h3>
              <a
                href={`mailto:${profile.email}`}
                class="inline-flex items-center gap-3 text-base md:text-lg text-ink hover:opacity-70 transition-opacity duration-200 tracking-wide font-light"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span>{profile.email}</span>
              </a>
            </div>
          )}

          {profile.instagramHandle && (
            <div>
              <h3 class="metadata text-clay-muted mb-4">
                Instagram
              </h3>
              <a
                href={`https://instagram.com/${profile.instagramHandle}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-3 text-base md:text-lg text-ink hover:opacity-70 transition-opacity duration-200 tracking-wide font-light"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                <span>@{profile.instagramHandle}</span>
              </a>
            </div>
          )}

          {profile.location && (
            <div>
              <h3 class="metadata text-clay-muted mb-4">
                Location
              </h3>
              <p class="text-base md:text-lg text-ink tracking-wide font-light">
                {profile.location}
              </p>
            </div>
          )}
        </div>
      </div>
    ) : (
      <div class="text-center py-20">
        <p class="text-clay-muted text-lg mb-4 tracking-wide">
          Contact information not yet configured.
        </p>
        <p class="text-clay-muted/70 tracking-wide">
          Add your contact details in the Sanity Studio!
        </p>
      </div>
    )}
  </div>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { sanityClient, type Work, type Profile } from '../lib/sanityClient';

const works = await sanityClient.fetch<Work[]>(
  `*[_type == "work" && featured == true] | order(homeOrder asc, year desc) {
    _id,
    title,
    slug,
    year,
    dimensions,
    category,
    images,
    description,
    featured,
    order,
    homeOrder
  }`
);

const profile = await sanityClient.fetch<Profile>(
  `*[_type == "profile" && _id == "profile"][0] {
    _id,
    homeIntro
  }`
);
---

<BaseLayout title="Yufang Zhang Ceramics - Handcrafted Pottery">
  <!-- Hero Section -->
  <section class="text-center pt-6 pb-12 max-w-4xl mx-auto">
    {profile?.homeIntro ? (
      <p class="text-base md:text-lg text-clay-muted leading-relaxed tracking-wide font-light">
        {profile.homeIntro}
      </p>
    ) : (
      <p class="text-base md:text-lg text-clay-muted leading-relaxed tracking-wide font-light">
        Chiswick-based ceramicist making small-batch, wheel-thrown pottery for everyday use.
        Influenced by Chinese and Japanese traditions, my work focuses on functional, classical
        forms with hand-painted oxide decoration.
      </p>
    )}
  </section>

  <!-- Gallery Grid -->
  <section class="py-12">
    {works.length === 0 ? (
      <div class="text-center py-32">
        <p class="text-clay-muted text-lg tracking-wide font-light">
          No featured works yet. Add some in the Sanity Studio!
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-24">
        {works.map((work) => (
          <ProjectCard work={work} />
        ))}
      </div>
    )}
  </section>
</BaseLayout>

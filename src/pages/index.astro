---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { sanityClient, type HomeShowcase, type Profile } from '../lib/sanityClient';

const works = await sanityClient.fetch<HomeShowcase[]>(
  `*[_type == "homeShowcase"] | order(order asc) {
    _id,
    title,
    year,
    dimensions,
    images,
    description,
    order
  }`
);

const profile = await sanityClient.fetch<Profile>(
  `*[_type == "profile" && _id == "profile"][0] {
    _id,
    homeIntroHeading,
    homeIntroBody
  }`
);
---

<BaseLayout title="Yufang Zhang Ceramics">
  <!-- Hero Section -->
  <section class="text-center pt-6 pb-12">
    {profile?.homeIntroHeading && profile?.homeIntroBody ? (
      <div class="max-w-xl mx-auto">
        <h2 class="text-xl font-medium text-[#45413E] tracking-wide mb-4">
          {profile.homeIntroHeading}
        </h2>
        <p class="text-base font-light text-[#918C86] leading-relaxed tracking-wide">
          {profile.homeIntroBody}
        </p>
      </div>
    ) : (
      <div class="max-w-xl mx-auto">
        <h2 class="text-xl font-medium text-[#45413E] tracking-wide mb-4">
          Functional forms inspired by Eastern minimalism.
        </h2>
        <p class="text-base font-light text-[#918C86] leading-relaxed tracking-wide">
          Hand-painted and wheel-thrown in Chiswick, my work explores the intersection of classical tradition and the quiet rituals of daily life.
        </p>
      </div>
    )}
  </section>

  <!-- Gallery Grid -->
  <section class="py-20">
    {works.length === 0 ? (
      <div class="text-center py-32">
        <p class="text-lg font-light" style="color: var(--color-text-muted); letter-spacing: 0.01em;">
          No showcase items yet. Add some in the Sanity Studio under "Home Showcase"!
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-32">
        {works.map((work) => (
          <ProjectCard work={work} />
        ))}
      </div>
    )}
  </section>
</BaseLayout>

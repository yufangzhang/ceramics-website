---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { sanityClient, type Work } from '../lib/sanityClient';

const works = await sanityClient.fetch<Work[]>(
  `*[_type == "work" && featured == true] | order(year desc) {
    _id,
    title,
    slug,
    year,
    dimensions,
    category,
    images,
    description,
    featured
  }`
);
---

<BaseLayout title="Yufang Zhang Ceramics - Handcrafted Pottery">
  <!-- Hero Section -->
  <section class="text-center py-12 md:py-20 max-w-4xl mx-auto">
    <h1 class="text-5xl md:text-6xl font-light text-zinc-900 mb-8 tracking-wide">
      Yufang Zhang
    </h1>
    <p class="text-lg md:text-xl text-zinc-600 leading-relaxed tracking-wide">
      Chiswick-based ceramicist making small-batch, wheel-thrown pottery for everyday use.
      Influenced by Chinese and Japanese traditions, my work focuses on functional, classical
      forms with hand-painted oxide decoration.
    </p>
  </section>

  <!-- Gallery Grid -->
  <section class="py-12 md:py-20">
    {works.length === 0 ? (
      <div class="text-center py-20">
        <p class="text-zinc-500 text-lg tracking-wide">
          No featured works yet. Add some in the Sanity Studio!
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
        {works.map((work) => (
          <ProjectCard work={work} />
        ))}
      </div>
    )}
  </section>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { sanityClient, type Work } from '../lib/sanityClient';

const works = await sanityClient.fetch<Work[]>(
  `*[_type == "work"] | order(order asc, _createdAt desc) {
    _id,
    title,
    slug,
    year,
    dimensions,
    category,
    images,
    description,
    materials,
    dishwasherSafe,
    sold,
    order
  }`
);
---

<BaseLayout title="Selected Works - Yufang Zhang Ceramics" description="Explore my pottery collection">
  <!-- Brief intro -->
  <section class="text-center py-12 max-w-4xl mx-auto">
    <p class="text-base md:text-lg text-clay-muted leading-relaxed tracking-wide font-light">
      Porcelain & Stoneware.
    </p>
  </section>

  <!-- Selected Works Grid -->
  <section class="py-20">
    {works.length === 0 ? (
      <div class="text-center py-32">
        <p class="text-clay-muted text-lg tracking-wide font-light">
          No works yet. Add some in the Sanity Studio!
        </p>
      </div>
    ) : (
      <div class="columns-1 md:columns-2 lg:columns-3 gap-x-12">
        {works.map((work) => (
          <div class="break-inside-avoid mb-32">
            <ProjectCard work={work} />
          </div>
        ))}
      </div>
    )}
  </section>
</BaseLayout>

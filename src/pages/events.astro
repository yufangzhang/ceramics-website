---
import BaseLayout from '../layouts/BaseLayout.astro';
import { sanityClient, type Event } from '../lib/sanityClient';

const events = await sanityClient.fetch<Event[]>(
  `*[_type == "event"] | order(date desc) {
    _id,
    title,
    date,
    location,
    description,
    link
  }`
);

const now = new Date();
const upcomingEvents = events.filter(event => new Date(event.date) >= now);
const pastEvents = events.filter(event => new Date(event.date) < now);

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}
---

<BaseLayout title="Events - Yufang Zhang Ceramics" description="Upcoming pottery workshops, exhibitions, and events">
  <div class="max-w-4xl mx-auto">
    <!-- Page Header -->
    <section class="text-center py-12 md:py-16 border-b border-zinc-200">
      <h1 class="text-4xl md:text-5xl font-light text-zinc-900 tracking-wide">
        Events
      </h1>
    </section>

    <div class="py-16">
      <!-- Upcoming Events -->
      {upcomingEvents.length > 0 && (
        <section class="mb-20">
          <h2 class="text-2xl font-light text-zinc-900 mb-10 pb-3 border-b border-zinc-200 tracking-wide">
            Upcoming
          </h2>
          <div class="space-y-10">
            {upcomingEvents.map((event) => (
              <article class="border-b border-zinc-100 pb-10 last:border-b-0">
                <h3 class="text-2xl font-light text-zinc-900 mb-4 tracking-wide">
                  {event.title}
                </h3>
                <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-zinc-600 mb-5 tracking-wide">
                  <time class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {formatDate(event.date)}
                  </time>
                  <span class="hidden sm:block text-zinc-400">•</span>
                  <span class="flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    {event.location}
                  </span>
                </div>
                {event.description && (
                  <p class="text-zinc-700 mb-5 leading-relaxed tracking-wide">
                    {event.description}
                  </p>
                )}
                {event.link && (
                  <a
                    href={event.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-zinc-900 hover:text-zinc-600 transition-colors duration-200 tracking-wide"
                  >
                    Learn more
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- Past Events -->
      {pastEvents.length > 0 && (
        <section>
          <h2 class="text-2xl font-light text-zinc-900 mb-10 pb-3 border-b border-zinc-200 tracking-wide">
            Past Events
          </h2>
          <div class="space-y-8 opacity-60">
            {pastEvents.map((event) => (
              <article class="border-b border-zinc-100 pb-8 last:border-b-0">
                <h3 class="text-xl font-light text-zinc-900 mb-3 tracking-wide">
                  {event.title}
                </h3>
                <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-zinc-600 text-sm tracking-wide">
                  <time>{formatDate(event.date)}</time>
                  <span class="hidden sm:block text-zinc-400">•</span>
                  <span>{event.location}</span>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      {events.length === 0 && (
        <div class="text-center py-20">
          <p class="text-zinc-500 text-lg tracking-wide">
            No events scheduled at the moment. Check back soon!
          </p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
